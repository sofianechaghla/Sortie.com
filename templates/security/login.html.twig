{% extends 'base.html.twig' %}
{% block title %} {{ title }} | {{ parent() }}{% endblock %}
{% block body%}
    <section class="container-fluid h-custom w-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-md-9 col-lg-6 col-xl-5 p-0 mb-3 rounded">
                <img src="{{asset('assets/image/connexion.png')}}"
                     class="img-fluid rounded opacity-75" alt="Sample image">
            </div>
            <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
                <form method="post">
                    <div class="d-flex flex-row align-items-center justify-content-center justify-content-lg-start">
                        <h1 class="my-3 text-center text-white f-lunatic fs-4 fw-bold">Veuillez vous connecter !</h1>
                    </div>
                    {% if error %}
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <strong>Erreur !</strong> {{ error.messageKey|trans(error.messageData, 'security') }}
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    {% endif %}
                    <div class="form-outline mb-4">
                        <label class="form-label" for="inputEmail">Email | Pseudo</label>
                        <input type="text" id="inputEmail"
                               placeholder="Entrez votre email ou votre pseudo"
                               value="{{ last_username }}" name="email" class="form-control form-control-sm" autocomplete="text" required autofocus/>
                    </div>
                    <div class="form-outline mb-3">
                        <label class="form-label" for="inputPassword">Mot de passe</label>
                        <input type="password" id="inputPassword" class="form-control form-control-sm"
                               placeholder="Entrez votre mot de passe"
                               name="password" autocomplete="current-password" required/>
                    </div>
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}" >
                    <div class="d-flex justify-content-between align-items-center">

                        <div class="form-check form-switch">
                            <input class="form-check-input" type="checkbox" name="_remember_me" id="remember_me" />
                            <label class="form-check-label" for="remember_me">
                                Se souvenir de moi
                            </label>
                        </div>

                    </div>
                    <div class="text-center text-lg-start mt-4 pt-2">
                        <button type="submit" class="btn bg-4 btn-lg text-white f-lunatic btn-connexion">Se connecter
                        </button>
                        <p class="small fw-bold mt-2 pt-1 mb-3">Mot de passe oublié?
                            <a href="{{ path('app_forgot_password_request')}}" class="link-danger">Récupération</a>
                        </p>
                    </div>
                </form>
            </div>
        </div>
    </section>
{% endblock%}