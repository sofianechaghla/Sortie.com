{% extends 'base.html.twig' %}

{% block title %}Réinitialiser votre mot de passe{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}
    <div class="reset-pass">
        <h1 class="text-center my-3 fs-4 f-lunatic text-white">Réinitialiser votre mot de passe</h1>

        {{ form_start(requestForm) }}
        <div class="col-10 col-md-6 col-lg-4 m-auto">
            <div class="text-center">
                <img class="img-fluid w-75" alt="reset-password" src="{{asset('assets/image/reset.png')}}">
            </div>
            <div class="input-group px-2">
                <label class="input-group-text" for="reset_password_request_form_email">Email</label>
                {{ form_widget(requestForm.email) }}
            </div>
            <p class="text-white px-2 fs-6">
                Indiquer votre adresse email et nous vous enverrons un lien pour réinitialiser votre mot de passe.
            </p>
        </div>
        <div class="input-group text-center">
            <button class="btn bg-4 btn-lg text-white btn-connexion m-auto">Lancer la réinitialisation</button>
        </div>

        {{ form_end(requestForm) }}
    </div>

{% endblock %}
